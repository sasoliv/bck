#!/bin/bash

xrandr --auto
xrandr --output DP-5 --off
xrandr --output DP-2 --off

# pulseaudio
# device=$(pacmd list-sinks | grep alsa_output.pci-0000_26_00.1.hdmi | awk '{print $2}')
# device=${device:1}
# device=${device::-1}
# pacmd set-default-sink $device
# pacmd set-sink-volume $device 65536 

# pipewire
device=$(pactl list short sinks | cut -f 2 | grep hdmi)
pactl set-default-sink "$device"
pactl set-sink-volume @DEFAULT_SINK@ 100%

killall steam
nohup steam -bigpicture &
