#!/bin/bash

killall steam

xrandr --auto
xrandr --output DP-2 --primary --mode 1920x1080 -r 143.85
xrandr --output DP-5 --left-of DP-2
xrandr --output HDMI-0 --right-of DP-2

# pulse audio
# device=$(pacmd list-sinks | grep alsa_output.pci-0000_28_00.3.analog | awk '{print $2}')
# device=${device:1}
# device=${device::-1}
# pacmd set-default-sink $device

# pipewire
device=$(pactl list short sinks | cut -f 2 | grep analog)
pactl set-default-sink "$device"
pactl set-sink-volume @DEFAULT_SINK@ 70%
